{
  "name": "border-radius-generator",
  "version": "0.1.0",
  "private": true,
  "homepage": "https://am-77.github.io/border-radius-generator/",
  "dependencies": {
    "@testing-library/jest-dom": "^5.9.0",
    "@testing-library/react": "^10.0.4",
    "@testing-library/user-event": "^7.1.2",
    "@types/jest": "^25.2.3",
    "@types/node": "^12.0.0",
    "@types/react": "^16.9.0",
    "@types/react-dom": "^16.9.0",
    "@types/testing-library__jest-dom": "^5.9.1",
    "@types/testing-library__react": "^10.0.1",
    "copy-to-clipboard": "^3.3.1",
    "gh-pages": "^3.0.0",
    "jest": "24.9.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-scripts": "3.4.1",
    "ts-jest": "^26.0.0",
    "typescript": "~3.7.2"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "eject": "react-scripts eject",
    "test": "jest",
    "test:watch": "jest --watch",
    "predeploy": "yarn run build",
    "deploy": "gh-pages -d build",
    "lint:check": "eslint '*/**/*.{js,ts,tsx}' --ignore-path ./.eslintignore --color",
    "lint:fix": "eslint '*/**/*.{js,ts,tsx}' --ignore-path ./.eslintignore --color --fix",
    "format:check": "prettier '*/**/*.{ts,tsx,css,json}' --check --ignore-path ./.prettierignore",
    "format:fix": "prettier '*/**/*.{ts,tsx,css,json}' --write --ignore-path ./.prettierignore"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "yarn lint:fix",
      "git add"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.4.0",
    "eslint": "7.2.0",
    "eslint-config-airbnb": "18.2.0",
    "eslint-config-airbnb-typescript-prettier": "^3.1.0",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-jsx-a11y": "^6.3.0",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-react-hooks": "4.0.0",
    "prettier": "^2.1.2"
  },
  "license": "MIT",
  "keywords": [
    "react",
    "typescript",
    "border-radius",
    "generator"
  ]
}
